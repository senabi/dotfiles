abbr mirror="sudo reflector -f 30 -l 30 --number 10 --verbose --save /etc/pacman.d/mirrorlist"
abbr wl-electron="--enable-features=UseOzonePlatform --ozone-platform=wayland"
abbr gl="git log --graph --abbr-commit"
abbr gf="git fetch"
