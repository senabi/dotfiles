alias ll="exa --icons -l"
alias la="exa --icons -la"
alias ls="exa --icons -a --group-directories-first"
alias update="sudo pacman -Syyu"
alias cleanup="sudo pacman -Qtdq | sudo pacman -Rns -"
alias pacman="sudo pacman"

