#alias bgc="rm -rf build; mkdir build; cd build; cmake .. -DCMAKE_C_COMPILER=$(which gcc) -DCMAKE_CXX_COMPILER=$(which g++) && make; cd ..;"
alias bgc="rm -rf build; cmake -B build . && make -C build"
#alias rbcl="cd build; cmake .. -DCMAKE_C_COMPILER=$(which clang) -DCMAKE_CXX_COMPILER=$(which clang++) && make; cd ..;"
